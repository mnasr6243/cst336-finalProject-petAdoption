<%- include("partials/header") %>

  <section class="row justify-content-center">
    <article class="col-md-6">
      <div class="card p-4 shadow-sm">
        <h1 class="h4 mb-3">Edit User</h1>

        <% if (typeof message !=="undefined" && message) { %>
          <div class="alert alert-success small">
            <%= message %>
          </div>
          <% } %>

            <form method="POST" action="/admin/users/<%= user.userId %>/edit">

              <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input type="text" id="username" name="username" class="form-control" value="<%= user.username %>"
                  required>
              </div>

              <div class="mb-3">
                <label class="form-label" for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" class="form-control"
                  value="<%= user.firstName || '' %>" required>
              </div>

              <div class="mb-3">
                <label class="form-label" for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" class="form-control" value="<%= user.lastName || '' %>"
                  required>
              </div>

              <div class="mb-3">
                <label class="form-label">Role:</label>
                <select name="isAdmin" class="form-select">
                  <option value="0" <%=!user.isAdmin ? 'selected' : '' %>>User</option>
                  <option value="1" <%=user.isAdmin ? 'selected' : '' %>>Admin</option>
                </select>
              </div>

              <button type="submit" class="btn btn-primary">
                Save Changes
              </button>

              <a href="/admin/users" class="btn btn-outline-secondary ms-2">
                Cancel
              </a>
            </form>
      </div>
    </article>
  </section>

  <%- include("partials/footer") %>